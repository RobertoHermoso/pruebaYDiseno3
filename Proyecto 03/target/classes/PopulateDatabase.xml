	</bean>
	<!-- END OF SPONSOR -->
	
	
	
	
	<!-- SPONSORSHIP    -->
	<bean id="sponsorship1" class="domain.Sponsorship">
		<property name="bannerUrl" 	value="www.example.com/image1.jpg"/>
		<property name="link" 		value="www.example.com/link1"/>
